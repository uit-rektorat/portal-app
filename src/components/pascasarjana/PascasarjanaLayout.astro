---
import { parseMarkdownWithClasses } from '../../lib/markdown';

// Layout untuk Pascasarjana - Fokus ke Program Studi
const { pascasarjana } = Astro.props;

const descriptionHtml = parseMarkdownWithClasses(pascasarjana.description || '');
---

<!-- Hero Section -->
<section class="relative h-[400px] bg-gradient-to-r from-blue-900 to-blue-700 overflow-hidden">
  {
    pascasarjana.heroImage && (
      <div class="absolute inset-0">
        <img
          src={pascasarjana.heroImage}
          alt={pascasarjana.name}
          class="w-full h-full object-cover opacity-20"
        />
      </div>
    )
  }
  <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-700/80"></div>
  
  <div class="relative container mx-auto px-4 h-full flex items-center">
    <div class="max-w-3xl text-white">
      <p class="text-blue-200 text-sm font-medium uppercase tracking-wide mb-2">
        Program Pascasarjana
      </p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{pascasarjana.name}</h1>
      {pascasarjana.tagline && <p class="text-xl text-white/90">{pascasarjana.tagline}</p>}
    </div>
  </div>
</section>

<div class="container mx-auto px-4 py-12">
  <!-- Description Section -->
  {pascasarjana.description && (
    <section class="mb-16 max-w-4xl mx-auto">
      <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="prose prose-lg text-gray-600" set:html={descriptionHtml}></div>
      </div>
    </section>
  )}

  <!-- Program Studi Section -->
  {
    pascasarjana.programs && pascasarjana.programs.length > 0 && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          Program Studi
        </h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {pascasarjana.programs.map((program) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
              <!-- Program Header -->
              <div class="bg-gradient-to-r from-blue-600 to-blue-800 p-6 text-white">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-2">{program.name}</h3>
                    <span class="inline-block px-3 py-1 bg-white/20 text-white text-sm font-medium rounded-full">
                      {program.degree}
                    </span>
                  </div>
                  {program.accreditation && (
                    <div class="ml-4 text-center">
                      <div class="w-16 h-16 rounded-full bg-white flex items-center justify-center">
                        <span class="text-2xl font-bold text-blue-700">
                          {program.accreditation}
                        </span>
                      </div>
                      <p class="text-xs mt-1">Akreditasi</p>
                    </div>
                  )}
                </div>
              </div>

              <!-- Program Content -->
              <div class="p-6">
                {program.description && (
                  <div class="mb-6 text-gray-600" set:html={parseMarkdownWithClasses(program.description)}></div>
                )}

                {/* Program Details */}
                <div class="space-y-3 mb-6">
                  {program.duration && (
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="text-sm">Durasi: <strong>{program.duration}</strong></span>
                    </div>
                  )}
                  {program.tuition && (
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                      </svg>
                      <span class="text-sm">Biaya: <strong>{program.tuition}</strong></span>
                    </div>
                  )}
                </div>

                {/* Coordinator */}
                {program.coordinator && (
                  <div class="border-t pt-6">
                    <h4 class="text-sm font-semibold text-gray-700 mb-3">Koordinator Program</h4>
                    <div class="flex items-center">
                      {program.coordinator.photo && (
                        <div class="w-16 h-16 rounded-full overflow-hidden border-2 border-blue-200 mr-4 flex-shrink-0">
                          <img
                            src={program.coordinator.photo}
                            alt={program.coordinator.name}
                            class="w-full h-full object-cover"
                          />
                        </div>
                      )}
                      <div>
                        <p class="font-bold text-gray-800">{program.coordinator.name}</p>
                        {program.coordinator.title && (
                          <p class="text-sm text-blue-600">{program.coordinator.title}</p>
                        )}
                        {program.coordinator.education && (
                          <p class="text-xs text-gray-600 mt-1">{program.coordinator.education}</p>
                        )}
                      </div>
                    </div>
                  </div>
                )}
              </div>

              <!-- Program Footer -->
              <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
                <button class="text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors">
                  Info Pendaftaran â†’
                </button>
                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                  Selengkapnya
                </button>
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-2xl p-8 md:p-12 text-center text-white">
    <h2 class="text-3xl font-bold mb-4">Tertarik Melanjutkan Studi?</h2>
    <p class="text-lg mb-6 text-white/90">
      Bergabunglah dengan Program Pascasarjana kami dan kembangkan karir akademis Anda
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#"
        class="px-8 py-3 bg-white text-blue-700 rounded-lg font-medium hover:bg-gray-100 transition-colors"
      >
        Informasi Pendaftaran
      </a>
      <a
        href="#"
        class="px-8 py-3 bg-blue-700 text-white rounded-lg font-medium hover:bg-blue-900 transition-colors border-2 border-white"
      >
        Hubungi Kami
      </a>
    </div>
  </section>
</div>
