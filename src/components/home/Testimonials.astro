---
// Testimonials Component
interface Testimonial {
  id: string;
  name: string;
  role: string;
  content: string;
  avatar?: string;
  rating: number;
}

interface Props {
  testimonials?: Testimonial[];
}

const { testimonials = [] } = Astro.props;

// Default testimonials
const defaultTestimonials: Testimonial[] = [
  {
    id: '1',
    name: 'Ahmad Fauzi',
    role: 'Alumni Teknik Informatika 2023',
    content: 'UIT memberikan pengalaman belajar yang luar biasa. Fasilitas lengkap, dosen berkualitas, dan program magang yang sangat membantu saya mendapatkan pekerjaan impian.',
    rating: 5
  },
  {
    id: '2',
    name: 'Siti Nurhaliza',
    role: 'Mahasiswa Manajemen 2024',
    content: 'Lingkungan kampus yang kondusif dan berbagai kegiatan organisasi membantu saya mengembangkan soft skill. UIT adalah pilihan terbaik untuk pendidikan tinggi.',
    rating: 5
  },
  {
    id: '3',
    name: 'Budi Santoso',
    role: 'Alumni Akuntansi 2022',
    content: 'Program beasiswa dan kerja sama industri di UIT sangat membantu. Sekarang saya bekerja di perusahaan multinasional berkat koneksi dari kampus.',
    rating: 5
  },
  {
    id: '4',
    name: 'Rina Wati',
    role: 'Mahasiswa Desain Grafis 2023',
    content: 'Kurikulum yang up-to-date dan proyek-proyek real di UIT membuat saya siap menghadapi dunia kerja. Terima kasih UIT!',
    rating: 5
  }
];

const testimonialsData = testimonials.length > 0 ? testimonials : defaultTestimonials;

function getInitials(name: string): string {
  return name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);
}
---

<section class="py-16 md:py-20 bg-gradient-to-br from-blue-900 via-blue-800 to-blue-900 text-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Testimoni Alumni & Mahasiswa
      </h2>
      <p class="text-lg text-blue-100 max-w-2xl mx-auto">
        Dengarkan pengalaman mereka yang telah merasakan kualitas pendidikan di UIT
      </p>
    </div>

    <!-- Testimonials Slider -->
    <div class="testimonials-slider overflow-hidden">
      <div class="testimonials-track flex transition-transform duration-500 ease-in-out">
        {testimonialsData.map((testimonial) => (
          <div class="testimonial-card flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 md:p-8 h-full border border-white/20">
              <!-- Rating -->
              <div class="flex items-center mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>

              <!-- Content -->
              <p class="text-blue-50 mb-6 text-lg leading-relaxed">
                "{testimonial.content}"
              </p>

              <!-- Author -->
              <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center font-bold mr-4">
                  {testimonial.avatar ? (
                    <img 
                      src={testimonial.avatar} 
                      alt={testimonial.name}
                      class="w-full h-full rounded-full object-cover"
                    />
                  ) : (
                    <span class="text-white">
                      {getInitials(testimonial.name)}
                    </span>
                  )}
                </div>
                <div>
                  <div class="font-bold text-white">{testimonial.name}</div>
                  <div class="text-sm text-blue-200">{testimonial.role}</div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Navigation Buttons -->
    {testimonialsData.length > 1 && (
      <div class="flex items-center justify-center mt-8 space-x-4">
        <button 
          id="testimonial-prev"
          class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-full flex items-center justify-center backdrop-blur-sm transition-colors"
          aria-label="Previous testimonial"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        <button 
          id="testimonial-next"
          class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-full flex items-center justify-center backdrop-blur-sm transition-colors"
          aria-label="Next testimonial"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    )}
  </div>
</section>

<script>
  let currentIndex = 0;
  const track = document.querySelector('.testimonials-track') as HTMLElement;
  const cards = document.querySelectorAll('.testimonial-card');
  const prevBtn = document.getElementById('testimonial-prev');
  const nextBtn = document.getElementById('testimonial-next');
  
  function getCardsToShow(): number {
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 768) return 2;
    return 1;
  }

  function updateSlider() {
    const cardsToShow = getCardsToShow();
    const maxIndex = Math.max(0, cards.length - cardsToShow);
    currentIndex = Math.min(currentIndex, maxIndex);
    
    const cardWidth = (track.parentElement?.offsetWidth || 0) / cardsToShow;
    track.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
  }

  prevBtn?.addEventListener('click', () => {
    currentIndex = Math.max(0, currentIndex - 1);
    updateSlider();
  });

  nextBtn?.addEventListener('click', () => {
    const cardsToShow = getCardsToShow();
    const maxIndex = cards.length - cardsToShow;
    currentIndex = Math.min(maxIndex, currentIndex + 1);
    updateSlider();
  });

  // Auto-play
  setInterval(() => {
    const cardsToShow = getCardsToShow();
    const maxIndex = cards.length - cardsToShow;
    currentIndex = currentIndex >= maxIndex ? 0 : currentIndex + 1;
    updateSlider();
  }, 5000);

  // Handle resize
  window.addEventListener('resize', updateSlider);
  
  // Initial update
  updateSlider();
</script>
