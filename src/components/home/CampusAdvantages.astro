  id: string;
  title: string;
  description: string;
  icon: string;
}

interface Props {
  advantages?: Advantage[];
}

const { advantages = [] } = Astro.props;

// Default advantages
const defaultAdvantages: Advantage[] = [
  {
    id: "1",
    title: "Akreditasi Unggul",
    description:
      "Program studi terakreditasi dengan standar nasional dan internasional",
    icon: "certificate",
  },
  {
    id: "2",
    title: "Dosen Berkualitas",
    description: "Tenaga pengajar profesional dan berpengalaman di bidangnya",
    icon: "users",
  },
  {
    id: "3",
    title: "Fasilitas Modern",
    description:
      "Laboratorium, perpustakaan, dan ruang kelas dengan teknologi terkini",
    icon: "building",
  },
  {
    id: "4",
    title: "Kerja Sama Industri",
    description:
      "Kemitraan dengan perusahaan untuk program magang dan penempatan kerja",
    icon: "briefcase",
  },
  {
    id: "5",
    title: "Beasiswa Tersedia",
    description: "Berbagai program beasiswa untuk mahasiswa berprestasi",
