---

<section class="py-12 md:py-16 bg-white -mt-10 relative z-10">
  <div class="container mx-auto px-4">
    <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6"
      >
        {
          quickAccessItems.map((item) => (
            <a
              href={item.link}
              class="flex flex-col items-center p-4 rounded-xl hover:bg-uit-bg transition-all group"
            >
              <div class="w-16 h-16 bg-gradient-to-br from-uit-green-light/30 to-uit-green/30 rounded-xl flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                <svg
                  class="w-8 h-8 text-uit-green"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={iconMap[item.icon] || iconMap["book-open"]}
                  />
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-700 text-center group-hover:text-uit-green transition-colors">
                {item.title}
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
