// Quick Access Component
interface QuickAccessItem {
  id: string;
  title: string;
  icon: string;
  link: string;
}

interface Props {
  items?: QuickAccessItem[];
}

const { items = [] } = Astro.props;

// Default items if no data from Strapi
const defaultItems: QuickAccessItem[] = [
  // Uncomment saat pendaftaran MABA dibuka
