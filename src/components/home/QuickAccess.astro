  //   icon: 'user-plus',
  //   link: '#pendaftaran'
  // },
  {
    id: "2",
    title: "Portal Mahasiswa",
    icon: "graduation-cap",
    link: "#portal",
  },
  {
    id: "3",
    title: "E-Learning",
    icon: "book-open",
    link: "#elearning",
  },
  {
    id: "4",
    title: "Perpustakaan Digital",
    icon: "library",
    link: "#library",
  },
  {
    id: "5",
    title: "Beasiswa",
    icon: "award",
    link: "#beasiswa",
  },
  {
    id: "6",
    title: "Kontak",
    icon: "phone",
    link: "#kontak",
  },
];

const quickAccessItems = items.length > 0 ? items : defaultItems;

const iconMap: Record<string, string> = {
  "user-plus":
