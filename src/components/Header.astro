---
const currentPath = Astro.url.pathname;
---

<!-- Top Bar with Social Media -->
<div class="bg-gradient-to-r from-uit-green-dark to-uit-green text-white py-2">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between text-sm">
      <div class="flex items-center space-x-4">
        <span class="hidden md:inline-flex items-center">
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          info@uit.ac.id
        </span>
        <span class="hidden lg:inline-flex items-center">
          <svg
            class="w-4 h-4 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          (0411) 123-4567
        </span>
      </div>

      <!-- Social Media Icons -->
      <div class="flex items-center space-x-3">
        <span class="hidden md:inline text-xs font-medium">Ikuti Kami:</span>
        <a
          href="https://instagram.com/uit"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-uit-green-light transition-colors"
          aria-label="Instagram UIT"
          title="Instagram UIT"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
            ></path>
          </svg>
        </a>
        <a
          href="https://youtube.com/@uit"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-uit-green-light transition-colors"
          aria-label="YouTube UIT"
          title="YouTube UIT"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <img
          src="/images/logo.svg"
          alt="Universitas Indonesia Timur"
          class="w-12 h-12 object-contain"
        />
        <div class="hidden md:block">
          <div class="text-lg font-bold text-gray-800">
            Universitas Indonesia Timur
          </div>
          <div class="text-xs text-gray-600">Building Excellence</div>
        </div>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class:list={[
            "font-medium transition-colors",
            currentPath === "/"
              ? "text-uit-green"
              : "text-gray-700 hover:text-uit-green",
          ]}
        >
          Beranda
        </a>
        <a
          href="/profile"
          class:list={[
            "font-medium transition-colors",
            currentPath === "/profile"
              ? "text-uit-green"
              : "text-gray-700 hover:text-uit-green",
          ]}
        >
          Profil
        </a>
        <a
          href="#"
          class="text-gray-700 hover:text-uit-green font-medium transition-colors"
        >
          Program Studi
        </a>
        <a
          href="#"
          class="text-gray-700 hover:text-uit-green font-medium transition-colors"
        >
          Berita
        </a>
        <!-- Uncomment saat pendaftaran MABA dibuka -->
        <!-- <a href="#" class="bg-gradient-to-r from-uit-green to-uit-green-light text-white px-6 py-2 rounded-lg hover:from-uit-green-dark hover:to-uit-green transition-colors">
          Pendaftaran
        </a> -->
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-700 focus:outline-none"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <a
        href="/"
        class="block py-2 text-gray-700 hover:text-uit-green font-medium"
        >Beranda</a
      >
      <a
        href="/profile"
        class="block py-2 text-gray-700 hover:text-uit-green font-medium"
        >Profil</a
      >
      <a
        href="#"
        class="block py-2 text-gray-700 hover:text-uit-green font-medium"
        >Program Studi</a
      >
      <a
        href="#"
        class="block py-2 text-gray-700 hover:text-uit-green font-medium"
        >Berita</a
      >
      <!-- Uncomment saat pendaftaran MABA dibuka -->
      <!-- <a href="#" class="block py-2 text-uit-green font-medium">Pendaftaran</a> -->
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
