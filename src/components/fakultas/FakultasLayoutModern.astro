---
import { parseMarkdownWithClasses } from '../../lib/markdown';

// Layout Modern - Full width hero dengan grid modern
const { fakultas } = Astro.props;

// Normalize mission to HTML with bullets and markdown support
const missionHtml = (() => {
  const m = fakultas.mission;
  if (!m) return '';
  if (Array.isArray(m)) {
    return `<ul class="list-disc pl-6 space-y-2">${m.map((it) => `<li>${parseMarkdownWithClasses(it)}</li>`).join('')}</ul>`;
  }
  if (typeof m === 'string') {
    // If string already contains HTML tags, apply markdown then return
    if (/<\/[^>]+>/.test(m)) {
      return parseMarkdownWithClasses(m);
    }
    const lines = m.split(/\r?\n/).map((l) => l.trim()).filter(Boolean);
    const stripped = lines.map((l) => l.replace(/^[\-\u2022\*]\s*/, '')).filter(Boolean);
    if (stripped.length > 1) {
      return `<ul class="list-disc pl-6 space-y-2">${stripped.map((it) => `<li>${parseMarkdownWithClasses(it)}</li>`).join('')}</ul>`;
    }
    return `<p>${parseMarkdownWithClasses(m)}</p>`;
  }
  return '';
})();

// Parse vision with markdown support
const visionHtml = parseMarkdownWithClasses(fakultas.vision || '');
const profileHtml = parseMarkdownWithClasses(fakultas.profile || '');
---

<!-- Hero Section dengan Image Background -->
<section class="relative h-[400px] bg-gradient-to-r from-uit-green-dark to-uit-green overflow-hidden">
  {
    fakultas.heroImage && (
      <div class="absolute inset-0">
        <img
          src={fakultas.heroImage}
          alt={fakultas.name}
          class="w-full h-full object-cover opacity-30"
        />
      </div>
    )
  }
  <div class="absolute inset-0 bg-gradient-to-r from-uit-green-dark/90 to-uit-green/80"></div>
  
  <div class="relative container mx-auto px-4 h-full flex items-center">
    <div class="max-w-3xl text-white">
      <div class="flex items-center space-x-3 mb-4">
        {
          fakultas.logo && (
            <img
              src={fakultas.logo}
              alt={`Logo ${fakultas.name}`}
              class="w-16 h-16 bg-white rounded-lg p-2"
            />
          )
        }
        <div>
          <p class="text-uit-green-light text-sm font-medium uppercase tracking-wide">
            Fakultas
          </p>
          <h1 class="text-4xl md:text-5xl font-bold">{fakultas.name}</h1>
        </div>
      </div>
      {fakultas.tagline && <p class="text-xl text-white/90 mt-4">{fakultas.tagline}</p>}
    </div>
  </div>
</section>

<!-- Quick Stats -->
{
  fakultas.stats && fakultas.stats.length > 0 && (
    <section class="bg-white shadow-lg -mt-16 relative z-10">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 py-8">
          {fakultas.stats.map((stat) => (
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-uit-green">
                {stat.value}
              </div>
              <div class="text-sm md:text-base text-gray-600 mt-2">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}

<div class="container mx-auto px-4 py-12">
  <!-- Profile Section -->
  <section class="mb-16">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Profil Fakultas</h2>
        <div class="prose prose-lg text-gray-600" set:html={profileHtml}></div>
      </div>
      {
        fakultas.profileImage && (
          <div class="rounded-xl overflow-hidden shadow-xl">
            <img
              src={fakultas.profileImage}
              alt={`Profil ${fakultas.name}`}
              class="w-full h-full object-cover"
            />
          </div>
        )
      }
    </div>
  </section>

  <!-- Visi & Misi Section -->
  <section class="mb-16 bg-gradient-to-br from-uit-green-light/10 to-blue-50 rounded-2xl p-8 md:p-12">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Visi -->
      <div>
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-uit-green rounded-lg flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              ></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">Visi</h2>
        </div>
        <div class="prose text-gray-600" set:html={visionHtml}></div>
      </div>

      <!-- Misi -->
      <div>
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-uit-green rounded-lg flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
              ></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">Misi</h2>
        </div>
        <div class="prose text-gray-600" set:html={missionHtml}></div>
      </div>
    </div>
  </section>

  <!-- Fasilitas Section -->
  {
    fakultas.facilities && fakultas.facilities.length > 0 && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          Fasilitas
        </h2>
        <div class="grid md:grid-cols-3 gap-6">
          {fakultas.facilities.map((facility) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
              {facility.image && (
                <div class="h-48 overflow-hidden">
                  <img
                    src={facility.image}
                    alt={facility.name}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">
                  {facility.name}
                </h3>
                <p class="text-gray-600">{facility.description}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- Prestasi & Kegiatan Section -->
  {
    (fakultas.achievements || fakultas.activities) && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          Prestasi & Kegiatan
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {/* Prestasi */}
          {fakultas.achievements && fakultas.achievements.length > 0 && (
            <div>
              <h3 class="text-2xl font-bold text-uit-green mb-6">Prestasi</h3>
              <div class="space-y-4">
                {fakultas.achievements.map((achievement) => (
                  <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-uit-green hover:shadow-lg transition-shadow">
                    <div class="flex items-start">
                      <div class="flex-shrink-0 w-12 h-12 bg-uit-green-light/20 rounded-full flex items-center justify-center mr-4">
                        <svg
                          class="w-6 h-6 text-uit-green"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                          />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <h4 class="font-bold text-gray-800 mb-2">
                          {achievement.title}
                        </h4>
                        <p class="text-gray-600 text-sm">
                          {achievement.description}
                        </p>
                        {achievement.year && (
                          <span class="inline-block mt-2 text-xs text-uit-green font-medium">
                            {achievement.year}
                          </span>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Kegiatan */}
          {fakultas.activities && fakultas.activities.length > 0 && (
            <div>
              <h3 class="text-2xl font-bold text-uit-green mb-6">Kegiatan</h3>
              <div class="space-y-4">
                {fakultas.activities.map((activity) => (
                  <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    {activity.image && (
                      <div class="h-48 overflow-hidden">
                        <img
                          src={activity.image}
                          alt={activity.title}
                          class="w-full h-full object-cover"
                        />
                      </div>
                    )}
                    <div class="p-6">
                      <h4 class="font-bold text-gray-800 mb-2">
                        {activity.title}
                      </h4>
                      <p class="text-gray-600 text-sm mb-3">
                        {activity.description}
                      </p>
                      {activity.date && (
                        <div class="flex items-center text-sm text-gray-500">
                          <svg
                            class="w-4 h-4 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            />
                          </svg>
                          {activity.date}
                        </div>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </section>
    )
  }

  <!-- Struktur Organisasi Section -->
  {
    (fakultas.dean || fakultas.heads) && (
      <section class="mb-16 bg-gray-50 rounded-2xl p-8 md:p-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          Struktur Organisasi
        </h2>

        {/* Dekan */}
        {fakultas.dean && (
          <div class="max-w-2xl mx-auto mb-12">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="bg-gradient-to-r from-uit-green to-uit-green-light p-6">
                <h3 class="text-xl font-bold text-white text-center">DEKAN</h3>
              </div>
              <div class="p-8 text-center">
                {fakultas.dean.photo && (
                  <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden border-4 border-uit-green shadow-lg">
                    <img
                      src={fakultas.dean.photo}
                      alt={fakultas.dean.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                <h4 class="text-xl font-bold text-gray-800">
                  {fakultas.dean.name}
                </h4>
                {fakultas.dean.title && (
                  <p class="text-uit-green font-medium mt-1">
                    {fakultas.dean.title}
                  </p>
                )}
                {fakultas.dean.education && (
                  <p class="text-gray-600 text-sm mt-2">
                    {fakultas.dean.education}
                  </p>
                )}
              </div>
            </div>
          </div>
        )}

        {/* Kepala Program Studi */}
        {fakultas.heads && fakultas.heads.length > 0 && (
          <div>
            <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">
              Kepala Program Studi
            </h3>
            <div class={`grid gap-6 ${fakultas.heads.length === 1 ? 'max-w-md mx-auto' : fakultas.heads.length === 2 ? 'md:grid-cols-2 max-w-3xl mx-auto' : 'md:grid-cols-2 lg:grid-cols-3'}`}>
              {fakultas.heads.map((head) => (
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                  {head.photo && (
                    <div class="h-48 bg-gradient-to-br from-uit-green-light/20 to-uit-green/10 flex items-center justify-center p-6">
                      <img
                        src={head.photo}
                        alt={head.name}
                        class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg"
                      />
                    </div>
                  )}
                  <div class="p-6 text-center">
                    <h4 class="font-bold text-gray-800 mb-1">{head.name}</h4>
                    {head.title && (
                      <p class="text-uit-green text-sm font-medium mb-2">
                        {head.title}
                      </p>
                    )}
                    <p class="text-gray-700 font-medium text-sm mb-2">
                      {head.program}
                    </p>
                    {head.education && (
                      <p class="text-gray-600 text-xs">{head.education}</p>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </section>
    )
  }

  <!-- Daftar Program Studi Section -->
  {
    fakultas.programs && fakultas.programs.length > 0 && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
          Program Studi
        </h2>
        <div class={`grid gap-6 ${fakultas.programs.length === 1 ? 'max-w-md mx-auto' : fakultas.programs.length === 2 ? 'md:grid-cols-2 max-w-3xl mx-auto' : 'md:grid-cols-2 lg:grid-cols-3'}`}>
          {fakultas.programs.map((program) => (
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow border-t-4 border-uit-green">
              <div class="flex items-start mb-4">
                <div class="flex-shrink-0 w-12 h-12 bg-uit-green rounded-lg flex items-center justify-center mr-4">
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    />
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-800 mb-1">
                    {program.name}
                  </h3>
                  <span class="inline-block px-3 py-1 bg-uit-green-light/20 text-uit-green text-xs font-medium rounded-full">
                    {program.degree}
                  </span>
                </div>
              </div>
              {program.description && (
                <div class="text-gray-600 text-sm mb-4" set:html={parseMarkdownWithClasses(program.description)}></div>
              )}
              {program.accreditation && (
                <div class="flex items-center text-sm text-gray-700 mb-2">
                  <svg
                    class="w-4 h-4 mr-2 text-uit-green"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                    />
                  </svg>
                  Akreditasi: <strong class="ml-1">{program.accreditation}</strong>
                </div>
              )}
              {program.link && (
                <a
                  href={program.link}
                  class="inline-flex items-center text-uit-green hover:text-uit-green-dark font-medium text-sm mt-2 transition-colors"
                >
                  Selengkapnya
                  <svg
                    class="w-4 h-4 ml-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              )}
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-uit-green to-uit-green-light rounded-2xl p-8 md:p-12 text-center text-white">
    <h2 class="text-3xl font-bold mb-4">Tertarik Bergabung?</h2>
    <p class="text-lg mb-6 text-white/90">
      Jadilah bagian dari {fakultas.name} dan wujudkan impian karirmu
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#"
        class="px-8 py-3 bg-white text-uit-green rounded-lg font-medium hover:bg-gray-100 transition-colors"
      >
        Informasi Pendaftaran
      </a>
      <a
        href="#"
        class="px-8 py-3 bg-uit-green-dark text-white rounded-lg font-medium hover:bg-uit-green-dark/80 transition-colors border-2 border-white"
      >
        Hubungi Kami
      </a>
    </div>
  </section>
</div>
