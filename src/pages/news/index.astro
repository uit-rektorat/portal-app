---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getNews } from '../../lib/strapi';

interface NewsItem {
  id: string;
  title: string;
  excerpt: string;
  image?: string;
  publishedAt: string;
  slug: string;
  category?: string;
  author?: string;
  readTime?: string;
}

// Fetch all news from Strapi
const allNews = await getNews(100); // Fetch many articles

// Get unique categories
const categories = ['Semua', ...new Set(allNews.map(n => n.category).filter(Boolean))];

// Get recent news (latest 5)
const recentNews = allNews.slice(0, 5);

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('id-ID', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

const categoryColors: Record<string, string> = {
  'Pengumuman': 'bg-uit-green/10 text-uit-green-dark border-uit-green/30',
  'Kegiatan': 'bg-blue-50 text-blue-700 border-blue-200',
  'Prestasi': 'bg-yellow-50 text-yellow-700 border-yellow-200',
  'Berita': 'bg-gray-50 text-gray-700 border-gray-200'
};

const categoryStats = categories.slice(1).map(cat => ({
  name: cat,
  count: allNews.filter(n => n.category === cat).length
}));
---

<BaseLayout 
  title="Berita & Pengumuman - UIT"
  description="Informasi terkini seputar kegiatan, pencapaian, dan pengumuman Universitas Indonesia Timur"
>
  <Header slot="header" />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-uit-green to-uit-green-dark text-white py-16 md:py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Berita Seputar Kampus
        </h1>
        <p class="text-xl text-white/90 mb-8">
          Informasi terkini seputar kegiatan, pencapaian, dan pengumuman UIT
        </p>
        
        <!-- Search Bar -->
        <div class="relative max-w-2xl mx-auto">
          <input 
            type="text" 
            id="searchInput"
            placeholder="Cari berita, pengumuman, atau kegiatan..." 
            class="w-full px-6 py-4 pr-32 rounded-full text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-4 focus:ring-white/30 shadow-xl"
          />
          <button 
            id="searchButton"
            class="absolute right-2 top-1/2 -translate-y-1/2 bg-uit-green hover:bg-uit-green-dark text-white px-6 py-2 rounded-full transition-colors flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <span class="hidden sm:inline">Cari</span>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        <!-- Main Content -->
        <div class="lg:col-span-3">
          
          <!-- Filter Categories -->
          <div class="bg-white rounded-xl p-6 mb-8 shadow-sm">
            <div class="flex flex-wrap gap-3">
              {categories.map((category) => (
                <button 
                  class="category-filter px-4 py-2 rounded-full border-2 transition-all hover:shadow-md"
                  data-category={category}
                >
                  {category}
                </button>
              ))}
            </div>
          </div>

          <!-- News Count -->
          <div class="mb-6">
            <p class="text-gray-600">
              Menampilkan <span id="newsCount" class="font-bold text-uit-green">{allNews.length}</span> berita
            </p>
          </div>

          <!-- News Grid -->
          <div id="newsGrid" class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            {allNews.map((item) => (
              <article class="news-item bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all group" data-category={item.category}>
                <!-- Image -->
                <div class="aspect-video bg-gradient-to-br from-uit-green-light/30 to-uit-green/30 overflow-hidden">
                  {item.image ? (
                    <img 
                      src={item.image} 
                      alt={item.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-16 h-16 text-uit-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  )}
                </div>

                <!-- Content -->
                <div class="p-6">
                  <!-- Category & Date -->
                  <div class="flex items-center justify-between mb-3 flex-wrap gap-2">
                    {item.category && (
                      <span class={`text-xs px-3 py-1 rounded-full font-semibold border ${categoryColors[item.category] || 'bg-gray-50 text-gray-700 border-gray-200'}`}>
                        {item.category}
                      </span>
                    )}
                    <span class="text-xs text-gray-500">
                      {formatDate(item.publishedAt)}
                    </span>
                  </div>

                  <!-- Title -->
                  <h3 class="news-title text-xl font-bold text-gray-900 mb-2 group-hover:text-uit-green transition-colors line-clamp-2">
                    {item.title}
                  </h3>

                  <!-- Excerpt -->
                  <p class="news-excerpt text-gray-600 mb-4 line-clamp-3 text-sm">
                    {item.excerpt}
                  </p>

                  <!-- Meta Info -->
                  <div class="flex items-center justify-between text-xs text-gray-500 mb-4">
                    {item.author && (
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        {item.author}
                      </span>
                    )}
                    {item.readTime && (
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        {item.readTime}
                      </span>
                    )}
                  </div>

                  <!-- Read More -->
                  <a 
                    href={`/news/${item.slug}`}
                    class="inline-flex items-center text-uit-green hover:text-uit-green-dark font-semibold"
                  >
                    Baca Selengkapnya
                    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>

          <!-- No Results Message -->
          <div id="noResults" class="hidden text-center py-12">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-gray-500 text-lg">Tidak ada berita yang ditemukan</p>
            <p class="text-gray-400 text-sm mt-2">Coba gunakan kata kunci lain atau ubah filter kategori</p>
          </div>

          <!-- Pagination -->
          <div class="flex justify-center items-center gap-2">
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>
            
            <button class="px-4 py-2 bg-uit-green text-white rounded-lg font-semibold">1</button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">2</button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">3</button>
            <span class="px-2 text-gray-400">...</span>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">10</button>
            
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          
          <!-- Recent News -->
          <div class="bg-white rounded-xl p-6 mb-6 shadow-sm sticky top-4">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-uit-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Berita Terbaru
            </h3>
            <div class="space-y-4">
              {recentNews.map((item) => (
                <a href={`/news/${item.slug}`} class="block group">
                  <div class="flex gap-3">
                    <div class="w-20 h-20 flex-shrink-0 bg-gradient-to-br from-uit-green-light/30 to-uit-green/30 rounded-lg overflow-hidden">
                      {item.image ? (
                        <img src={item.image} alt={item.title} class="w-full h-full object-cover" />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center">
                          <svg class="w-8 h-8 text-uit-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                          </svg>
                        </div>
                      )}
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="text-sm font-semibold text-gray-900 group-hover:text-uit-green transition-colors line-clamp-2 mb-1">
                        {item.title}
                      </h4>
                      <p class="text-xs text-gray-500">
                        {formatDate(item.publishedAt)}
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- Categories Stats -->
          <div class="bg-white rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-uit-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              Kategori
            </h3>
            <div class="space-y-2">
              {categoryStats.map((cat) => (
                <button 
                  class="category-filter w-full flex items-center justify-between px-3 py-2 rounded-lg hover:bg-gray-50 transition-colors text-left"
                  data-category={cat.name}
                >
                  <span class="text-sm text-gray-700">{cat.name}</span>
                  <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full font-semibold">
                    {cat.count}
                  </span>
                </button>
              ))}
            </div>
          </div>

          <!-- Newsletter Subscribe (Optional) -->
          <div class="bg-gradient-to-br from-uit-green to-uit-green-dark rounded-xl p-6 mt-6 text-white">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-3 text-white/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <h3 class="text-lg font-bold mb-2">
                Newsletter
              </h3>
              <p class="text-sm text-white/90 mb-4">
                Dapatkan berita terbaru langsung di email Anda
              </p>
              <input 
                type="email" 
                placeholder="Email Anda" 
                class="w-full px-4 py-2 rounded-lg text-gray-900 mb-2 text-sm focus:outline-none focus:ring-2 focus:ring-white/50"
              />
              <button class="w-full bg-white text-uit-green hover:bg-gray-100 px-4 py-2 rounded-lg font-semibold text-sm transition-colors">
                Berlangganan
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Search functionality
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const searchButton = document.getElementById('searchButton') as HTMLButtonElement;
    const newsItems = document.querySelectorAll('.news-item') as NodeListOf<HTMLElement>;
    const newsCount = document.getElementById('newsCount') as HTMLElement;
    const noResults = document.getElementById('noResults') as HTMLElement;
    const categoryFilters = document.querySelectorAll('.category-filter') as NodeListOf<HTMLButtonElement>;
    
    let currentCategory = 'Semua';
    let currentSearch = '';

    // Initialize first category as active
    if (categoryFilters.length > 0) {
      categoryFilters[0].classList.add('bg-uit-green', 'text-white', 'border-uit-green');
    }

    function filterNews() {
      let visibleCount = 0;
      
      newsItems.forEach(item => {
        const category = (item.dataset.category || '').toLowerCase();
        const title = (item.querySelector('.news-title')?.textContent || '').toLowerCase();
        const excerpt = (item.querySelector('.news-excerpt')?.textContent || '').toLowerCase();
        
        // Get author from the meta section
        const authorSpan = item.querySelector('.flex.items-center span');
        const author = (authorSpan?.textContent || '').toLowerCase();
        
        const matchesCategory = currentCategory === 'Semua' || category === currentCategory.toLowerCase();
        const matchesSearch = !currentSearch || 
          title.includes(currentSearch) || 
          excerpt.includes(currentSearch) ||
          category.includes(currentSearch) ||
          author.includes(currentSearch);
        
        if (matchesCategory && matchesSearch) {
          item.style.display = 'block';
          visibleCount++;
        } else {
          item.style.display = 'none';
        }
      });
      
      newsCount.textContent = visibleCount.toString();
      
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }

    // Search input handler
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        currentSearch = (e.target as HTMLInputElement).value.toLowerCase().trim();
        filterNews();
      });
      
      // Handle Enter key
      searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          currentSearch = searchInput.value.toLowerCase().trim();
          filterNews();
        }
      });
    }

    // Search button handler
    if (searchButton) {
      searchButton.addEventListener('click', (e) => {
        e.preventDefault();
        if (searchInput) {
          currentSearch = searchInput.value.toLowerCase().trim();
          filterNews();
        }
      });
    }

    // Category filter handler
    categoryFilters.forEach(button => {
      button.addEventListener('click', () => {
        // Update active state
        categoryFilters.forEach(btn => {
          btn.classList.remove('bg-uit-green', 'text-white', 'border-uit-green');
          btn.classList.add('border-gray-300', 'text-gray-700');
        });
        
        button.classList.remove('border-gray-300', 'text-gray-700');
        button.classList.add('bg-uit-green', 'text-white', 'border-uit-green');
        
        // Update filter
        currentCategory = button.dataset.category || 'Semua';
        filterNews();
      });
    });
  </script>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .sticky {
      position: sticky;
    }
  </style>

  <Footer slot="footer" />
</BaseLayout>
