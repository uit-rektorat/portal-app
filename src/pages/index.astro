---

<BaseLayout
  title="Beranda - Universitas Indonesia Timur"
  description="Universitas Indonesia Timur - Membangun Generasi Unggul dan Berkarakter untuk Indonesia yang Lebih Baik"
>
  <Header slot="header" />

  <!-- Hero / Slider -->
  <!-- Pass slides={heroSlides} when Strapi is ready -->
  <HeroSlider />

  <!-- Quick Access -->
  <!-- Pass items={quickAccessItems} when Strapi is ready -->
  <QuickAccess />

  <!-- Keunggulan Kampus -->
  <!-- Pass advantages={advantages} when Strapi is ready -->
  <CampusAdvantages />

  <!-- Informasi Kampus (Berita, Agenda, Pengumuman) -->
  <!-- Pass news={news} agenda={agenda} announcements={announcements} when Strapi is ready -->
  <CampusInfo />

  <!-- Testimoni -->
  <!-- Pass testimonials={testimonials} when Strapi is ready -->
  <Testimonials />

  <Footer slot="footer" />
</BaseLayout>
